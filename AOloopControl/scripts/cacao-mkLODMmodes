#! /bin/bash

NBARGS=1
pname=`echo "$0" | sed "s/\.\///g"`





function printHELP {
    echo "------------------------------------------------------------------------"
    echo "$(tput bold) $pname : CREATE LO DM MODES FOR AO LOOP  $(tput sgr0)"
    echo "------------------------------------------------------------------------"
    echo "  CREATE LO DM MODES FOR AO LOOP "
    echo "   "
    echo " $(tput bold)USAGE:$(tput sgr0)"
    echo "     $0 [-h] <FPSname>"
    echo ""
    echo " $(tput bold)INPUT:$(tput sgr0)"
    echo "     <FPSname>      Function Parameter Structure (FPS) name"
    echo ""
    echo " $(tput bold)OPTIONS:$(tput sgr0)"
    echo "     $(tput bold)-h$(tput sgr0)          help"
    echo ""
    echo ""
    echo " $(tput bold) NOTES:$(tput sgr0)"
    echo "  USES (OPTIONAL) : ./conf/aol<loopnb>_dmmask.fits"
    echo "  USES (OPTIONAL) : ./conf/aol<loopnb>_dmslaved.fits"
    echo "                  Telescope pupil mask and slaved actuators"
    echo "  USES (OPTIONAL) : ./conf/TPind.fits"
    echo "                  Modes to be excluded"
    echo ""
    echo "------------------------------------------------------------------------"
}


printHELP1 ()
{
    printf "     $(tput bold)%-25s$(tput sgr0)       Create LO DM modes for AO loop\n" "$0"
}




# Transform long options to short ones
singlelinehelp=0
for arg in "$@"; do
    shift
    case "$arg" in
        "--help") set -- "$@" "-h" ;;
        "--help1")
            set -- "$@" "-h"
            singlelinehelp=1;
            ;;
        *)        set -- "$@" "$arg"
    esac
done


while getopts :h FLAG; do
    case $FLAG in
        h)  #show help
            if [ "$singlelinehelp" -eq "0" ]; then
                printHELP
            else
                printHELP1
            fi
            exit
            ;;
        \?) #unrecognized option - show help
            echo -e \\n"Option -${BOLD}$OPTARG${NORM} not allowed."
            printHELP
            ;;
    esac
done

shift $((OPTIND-1))







if [ "$1" = "help" ] || [ "$#" -ne $NBARGS ]; then
    if [ "$#" -ne $NBARGS ]; then
        echo "$(tput setaf 1)$(tput bold) Illegal number of parameters ($NBARGS params required, $# entered) $(tput sgr0)"
    fi
    printHELP
    exit
fi





#LOOPNAME=$( head -1 LOOPNAME )
#loopnb=$( head -1 LOOPNUMBER )

LOOPNAME=${CACAO_LOOPNAME}
loopnb=${CACAO_LOOPNUMBER}


FPSfilename=$1
FPSname="$(basename ${FPSfilename} .fps)"


# Read parameters from FPS file
# note that ^ ensures grep matches beginning of line, and trailing space ensures exact match
#
datadir=$( grep "^${FPSname}.conf.datadir " ${FPSfilename} |  awk '{print $3;}' )
LOmaxCPA=$( grep "^${FPSname}.LOmaxCPA " ${FPSfilename} |  awk '{print $3;}' )

echo "datadir       : ${datadir}"
echo "LOmaxCPA      : ${LOmaxCPA}"

#=$( grep LOmaxCPA fpslog/fps.${FPSname}.dat |  awk '{print $3;}' )

pname0=$0
pname=${pname0#"./"}-$loopnb


#mkdir -p Cmodes
#mkdir -p tmp



#zRMstageddir=$( head -1 fpsconf/${FPSname}/out/dirname.setval.txt | awk '{print $1;}' )
#"conf_zrm_staged"
#loRMstageddir=$( head -1 fpsconf/${FPSname}/out/dirname.setval.txt | awk '{print $1;}' )
#"conf_LOrm_staged"
#mkdir -p ${zRMstageddir}
#mkdir -p ${loRMstageddir}


cacao -n $pname << EOF
mload milkZernikePolyn
cacao.aolnb ${loopnb}
loadfits "${datadir}/dmslaved.fits" dmslaved0
imtrunc dmslaved0 0.0 1.0 dmslaved
loadfits "${datadir}/dmmask_mksl.fits" dmmask
loadfits "${datadir}/TPind.fits" emodes
readshmim aol${loopnb}_dmC
info.imstats aol${loopnb}_dmC
cx=0.5*imsize0-0.5
cy=0.5*imsize1-0.5
od=0.42*imsize0
id=0.13*imsize0
if=0
cacaocc.aolmklodmmodes fmodes imsize0 imsize1 ${LOmaxCPA} 0.8 cx cy od id 0
saveFITS fmodes "${datadir}/respM_LOmodes.fits"
exitCLI
EOF

echo "setval acqlin_loRM-${loopnb}.fn_pokeC ./${datadir}/respM_LOmodes.fits" >> ${MILK_SHM_DIR}/${LOOPNAME}_fpsCTRL.fifo
echo "setval acqlin_loRM-${loopnb}.fn_RMDMmask ./${datadir}/dmmask_mkm.fits" >> ${MILK_SHM_DIR}/${LOOPNAME}_fpsCTRL.fifo

# register output files to be logged
echo "respM_LOmodes.fits" >> "${datadir}/loglist.dat"



cp ${datadir}/respM_LOmodes.fits ./conf/respM_LOmodes.fits
